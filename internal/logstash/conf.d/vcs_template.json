{
  "index_patterns": ["vcs-sms-server-checks-*"],
  "template": {
    "settings": {
      "number_of_shards": 1
    },
    "mappings": {
      "properties": {
        "@timestamp":    { "type": "date" },
        "server_id":     { "type": "keyword" },
        "status":        { "type": "keyword" },
        "response_time": { "type": "integer" }
      }
    }
  }
}
